{
    "manifest_version": 2,
    "name": "Tab Grouper",
    "version": "1.0",
    "description": "Group tabs by domain.",
    "permissions": ["tabs", "contextMenus", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Group Tabs"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "MacCtrl+Shift+Y"
            },
            "description": "Group tabs by domain"
        }
    }
}
